{
  "smoke": [
    {
      "name": "request-followup-dry-run",
      "args": [
        "request-followup",
        "--pr",
        "456",
        "--issue",
        "999",
        "--body",
        "Please update tests and edge-cases.",
        "--dry-run"
      ],
      "timeout_sec": 10,
      "expect": {
        "exit_codes": [0],
        "stdout_regex": "DRY-RUN-PR-COMMENT-URL"
      }
    },
    {
      "name": "merge-dry-run",
      "args": [
        "merge",
        "--pr",
        "456",
        "--method",
        "merge",
        "--issue",
        "999",
        "--close-issue",
        "--issue-comment",
        "Completed in #456",
        "--dry-run"
      ],
      "timeout_sec": 10,
      "expect": {
        "exit_codes": [0]
      }
    },
    {
      "name": "merge-dry-run-fail-invalid-pr-body-override",
      "args": [
        "merge",
        "--pr",
        "456",
        "--method",
        "merge",
        "--issue",
        "999",
        "--pr-body-file",
        "tests/fixtures/issue/pr_body_invalid_placeholder.md",
        "--dry-run"
      ],
      "timeout_sec": 10,
      "expect": {
        "exit_codes": [1],
        "stderr_regex": "invalid PR body content"
      }
    }
  ]
}
