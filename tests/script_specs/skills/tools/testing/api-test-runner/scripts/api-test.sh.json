{
  "smoke": [
    {
      "name": "fixture-suite",
      "args": [
        "--suite-file",
        "tests/fixtures/api-test-runner/fixture.suite.json",
        "--out",
        "out/tests/script-smoke/api-test/results.json"
      ],
      "env": {
        "CODEX_CURL_STUB_MODE": "1",
        "CODEX_CURL_STUB_STATUS": "200",
