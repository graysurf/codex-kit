{
  "smoke": [
    {
      "name": "codex-mssql-run",
      "command": [
        "zsh",
        "-f",
        "-c",
        "source scripts/db-connect/mssql.zsh; codex_mssql_run TEST /dev/null -Q 'select 1;'"
      ],
      "env": {
        "TEST_MSSQL_HOST": "127.0.0.1",
        "TEST_MSSQL_PORT": "1433",
        "TEST_MSSQL_USER": "user",
        "TEST_MSSQL_PASSWORD": "password",
        "TEST_MSSQL_DB": "db",
        "TEST_MSSQL_TRUST_CERT": "true",
        "TEST_MSSQL_SCHEMA": "dbo"
      },
      "timeout_sec": 10,
      "expect": {
        "exit_codes": [0],
        "stdout_regex": "sqlcmd stub ok"
      }
    }
  ]
}
