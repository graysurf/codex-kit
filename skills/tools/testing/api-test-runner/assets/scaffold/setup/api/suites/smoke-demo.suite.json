{
  "version": 1,
  "name": "smoke-demo",
  "defaults": {
    "env": "local",
    "noHistory": true,
    "rest": { "url": "http://127.0.0.1:43127" },
    "graphql": { "url": "http://127.0.0.1:43127/graphql" }
  },
  "cases": [
    {
      "id": "rest.local.get",
      "type": "rest",
      "tags": ["local", "demo", "smoke"],
      "request": "setup/rest/requests/local.get.request.json"
    },
    {
      "id": "graphql.local.health",
      "type": "graphql",
      "tags": ["local", "demo", "smoke"],
      "op": "setup/graphql/operations/health.graphql",
      "vars": "setup/graphql/operations/health.variables.json",
      "expect": {
        "jq": ".data.health.ok == true"
      }
    }
  ]
}
